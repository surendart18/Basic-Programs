#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n=3;
    for(int i=0;i<n;i++)
    {
        for(int j=1;j<=i;j++)
        {
            cout<<" ";
        }
        for(int j=1;j<=n-i;j++)
        {
            cout<<"* ";
        }
        for(int j=1;j<=i;j++)
        {
            cout<<" ";
        }
        cout<<endl;
    }
    for(int i=n-2;i>=0;i--)
    {
        for(int j=1;j<=i;j++)
        {
            cout<<" ";
        }
        for(int j=1;j<=n-i;j++)
        {
            cout<<"* ";
        }
        for(int j=1;j<=i;j++)
        {
            cout<<" ";
        }
        cout<<endl;
    }
    return 0;
}
